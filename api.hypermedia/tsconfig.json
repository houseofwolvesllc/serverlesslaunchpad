// https://www.typescriptlang.org/tsconfig
{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist"
  },
  "extends": "../tsconfig.json",
  "include": [
    "src/**/*",
    "test/**/*",
  ],
  "exclude": [
    "src/**/*.d.*",
    "test/**/*.d.*"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "resolveFullExtension": ".js"
  }
}