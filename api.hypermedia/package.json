{
    "name": "@houseofwolves/serverlesslaunchpad.api.hypermedia",
    "version": "1.0.0",
    "author": "k-gar",
    "description": "Serverless Launchpad Hypermedia API",
    "license": "UNLICENSED",
    "private": true,
    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "clean": "rimraf coverage build tmp dist",
        "prebuild": "echo 'Starting build...'",
        "build": "tsc && fix-esm-import-path dist",
        "build:prod": "tsc && fix-esm-import-path dist",
        "build:watch": "tsc --watch & fix-esm-import-path dist",
        "build:release": "npm run clean && tsc && fix-esm-import-path dist",
        "local": "npm run build && node dist/src/dev_server.js local 2>&1 | tee ../logs/api.log",
        "local:development": "npm run build && node dist/src/dev_server.js development",
        "local:staging": "npm run build && node dist/src/dev_server.js staging",
        "local:production": "npm run build && node dist/src/dev_server.js production",
        "lint": "eslint . --ext .ts --ext .mts --max-warnings 0",
        "lint:check": "eslint . --ext .ts --ext .mts || true",
        "test": "vitest --coverage",
        "prettier": "prettier --config .prettierrc.json --write .",
        "test:watch": "vitest --watch"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.145",
        "@types/express": "^4.17.21",
        "@types/node": "~18",
        "@typescript-eslint/eslint-plugin": "~5.44",
        "@typescript-eslint/parser": "~5.44",
        "@vitest/coverage-v8": "^3.0.8",
        "dotenv": "^16.4.5",
        "eslint": "~8.28",
        "eslint-config-prettier": "~8.5",
        "eslint-plugin-vitest": "^0.0.29",
        "express": "^4.19.2",
        "fix-esm-import-path": "^1.10.3",
        "prettier": "~2.8",
        "rimraf": "~3.0",
        "vitest": "^3.0.8"
    },
    "dependencies": {
        "@houseofwolves/serverlesslaunchpad.commons": "*",
        "@houseofwolves/serverlesslaunchpad.core": "*",
        "@houseofwolves/serverlesslaunchpad.framework": "*",
        "@types/reflect-metadata": "^0.0.5",
        "aws-lambda": "^1.0.7",
        "reflect-metadata": "^0.2.2",
        "zod": "^3.22.4"
    }
}
