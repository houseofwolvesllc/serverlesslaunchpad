{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "rootDir": "."
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
