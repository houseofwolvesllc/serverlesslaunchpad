{
    "name": "@houseofwolves/serverlesslaunchpad.core",
    "version": "1.0.0",
    "author": "k-gar",
    "description": "Serverless Launchpad Core",
    "license": "UNLICENSED",
    "private": true,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "process": "npx tsx ./src/run.ts",
        "clean": "rimraf coverage build tmp dist",
        "prebuild": "echo 'Building with SWC...'",
        "build": "tsc && tsc-alias",
        "build:watch": "tsc --watch --preserveWatchOutput & tsc-alias --watch & wait",
        "build:tsc": "tsc -p tsconfig.json",
        "build:release": "npm run clean && tsc && tsc-alias",
        "lint": "eslint . --ext .ts --ext .mts",
        "test": "vitest --coverage",
        "prettier": "prettier --config .prettierrc.json --write .",
        "test:watch": "vitest --watch"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@types/reflect-metadata": "^0.0.5",
        "@typescript-eslint/eslint-plugin": "~5.44",
        "@typescript-eslint/parser": "~5.44",
        "@vitest/coverage-v8": "^3.0.8",
        "eslint": "~8.28",
        "eslint-config-prettier": "~8.5",
        "eslint-plugin-vitest": "^0.0.29",
        "prettier": "^3.0.0",
        "rimraf": "^6.1.2",
        "tsc-alias": "^1.8.16",
        "unplugin-swc": "^1.5.7",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@houseofwolves/serverlesslaunchpad.types": "*",
        "reflect-metadata": "^0.2.2"
    }
}
